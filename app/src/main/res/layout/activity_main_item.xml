<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/radius_main_item"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/main_item_iv_categoryImg"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/studyimg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/main_item_tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Category]"
        android:textStyle="bold"
        android:textSize="19dp"
        android:textColor="#4D00ED"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/main_item_iv_categoryImg"
        app:layout_constraintTop_toTopOf="@id/main_item_iv_categoryImg" />

    
    <TextView
        android:id="@+id/main_item_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="컴퓨터 프로그래밍"
        android:textStyle="bold"
        android:textSize="19dp"
        android:textColor="#2748e4"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_item_tv_category"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/main_item_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14주차 강의 복습"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/main_item_tv_title"
        app:layout_constraintStart_toStartOf="@+id/main_item_tv_title"/>

    <TextView
        android:id="@+id/main_item_tv_startTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09:00"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/main_item_tv_content"
        app:layout_constraintStart_toStartOf="@+id/main_item_tv_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/main_item_tv_toTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/main_item_tv_startTime"
        app:layout_constraintBottom_toBottomOf="@id/main_item_tv_startTime"
        app:layout_constraintStart_toEndOf="@id/main_item_tv_startTime"
        android:layout_marginLeft="7dp"/>

    <TextView
        android:id="@+id/main_item_tv_endTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:text="11:00"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/main_item_tv_toTime"
        app:layout_constraintTop_toTopOf="@id/main_item_tv_startTime"
        app:layout_constraintBottom_toBottomOf="@id/main_item_tv_startTime"
        android:layout_marginLeft="7dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>